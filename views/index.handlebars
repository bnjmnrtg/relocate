{{!-- Main Content --}}
<div id="landingPage">

    {{!-- Content --}}
    <div class="container">
        <div id = 'homePageTitle'>
            <img id='homePageLogo' src="/assets/logo/relocate_logo_horizontal_white.png" alt="relocateLogo">
            <p id="homePageText">This will be our tagline.</p>
        </div>

        <!-- Modal Trigger -->
        <div class='homePageBtns' style='text-align:center'>
            <button data-target="modal1" class="light-green lighten-1 waves-effect waves-light btn-large logInBtn modal-trigger"><i class="material-icons right">play_circle_outline</i>Login</button>
